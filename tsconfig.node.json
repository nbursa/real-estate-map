{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*"
  ],
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2022"],
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "types": ["node"]
  }
}
